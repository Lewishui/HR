document.write('<link type="text/css" rel="stylesheet" href="{$GetInstallDir}ks_Inc/adcss/ad.css" />');
document.write('<scr'+'ipt type="text/javascript" src="{$GetInstallDir}ks_Inc/floatingAd.js"></scr'+'ipt>');
$(function(){
	$.floatingAd({
		//频率
		delay: 60,
		//超链接后是否关闭漂浮
		isLinkClosed: true,
		//漂浮内容
		ad:	[{
			//关闭区域背景透明度(0.1-1)
			headFilter: 0.3,
			//图片
			'img': '{$ImgSrc}',
			//图片高度
			'imgHeight': {$Height},
			//图片宽度
			'imgWidth': {$Width},
			//图片链接
			'linkUrl': '{$LinkUrl}',
			//浮动层级别
			'z-index': 10000,
			//标题
			'title': '{$Title}'
		}],
		//关闭事件
		onClose: function(elem){
			//alert('关闭');
		}
	});
	
	$("#aa").floatingAd({
		onClose:function(elem){}
	});
});